<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/status_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <TextView
        android:id="@+id/text_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/gender"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_title"
        app:layout_constraintBottom_toTopOf="@+id/image_male"
        app:layout_constraintStart_toStartOf="@+id/image_male" />

    <ImageView
        android:id="@+id/image_female"
        android:layout_width="@dimen/image_gender_size"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/image_male"
        android:focusable="true"
        android:stateListAnimator="@xml/anim_scale"
        app:layout_constraintBottom_toBottomOf="@+id/image_male"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/image_male"
        app:srcCompat="@drawable/img_female" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34140128" />


    <ImageView
        android:id="@+id/image_male"
        android:layout_width="@dimen/image_gender_size"
        android:layout_height="@dimen/image_gender_size"
        android:contentDescription="@string/image_male"
        android:stateListAnimator="@xml/anim_scale"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img_male" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/materialButtonToggleGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/edt_age"
        app:layout_constraintTop_toTopOf="@+id/textView3">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_yellow"
            android:text="@string/text_cm"
            android:textColor="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_inch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_gray"
            android:text="@string/text_image"
            android:textColor="@color/black" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/materialButtonToggleGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="@+id/edt_height"
        app:layout_constraintTop_toTopOf="@+id/textView5">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_yellow"
            android:text="@string/text_kg"
            android:textColor="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_lbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_gray"
            android:text="@string/text_lbs"
            android:textColor="@color/black" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_8"
        android:text="Age"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_title"
        app:layout_constraintStart_toStartOf="@+id/text_gender"
        app:layout_constraintTop_toBottomOf="@+id/image_male" />

    <EditText
        android:id="@+id/edt_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginTop="@dimen/margin_top_8"
        android:layout_marginEnd="@dimen/margin_end"
        android:autofillHints=""
        android:background="@drawable/background_edit_text"
        android:drawableStart="@drawable/icon_age"
        android:drawablePadding="@dimen/drawable_padding"
        android:ems="10"
        android:hint="Age"
        android:inputType="text"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/edt_height"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_16"
        android:autofillHints=""
        android:background="@drawable/background_edit_text"
        android:drawableStart="@drawable/ic_height"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Height"
        android:inputType="text"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_age"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/edt_age"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/edt_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_8"
        android:autofillHints=""
        android:background="@drawable/background_edit_text"
        android:drawableStart="@drawable/ic_weight"
        android:drawablePadding="@dimen/drawable_padding"
        android:ems="10"
        android:hint="Weight"
        android:inputType="text"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_height"
        app:layout_constraintStart_toStartOf="@+id/edt_height"
        app:layout_constraintTop_toBottomOf="@+id/materialButtonToggleGroup2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_16"
        android:text="Height"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_title"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/edt_age" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_16"
        android:text="Weight"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_title"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/edt_height" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_confirm_btn"
        android:stateListAnimator="@xml/anim_scale"
        android:text="Confirm"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:theme="@style/DefaultButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edt_weight"
        app:layout_constraintStart_toStartOf="@+id/edt_weight"
        app:layout_constraintTop_toBottomOf="@+id/edt_weight" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_color"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="About you"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white" />
    </com.google.android.material.appbar.MaterialToolbar>

</androidx.constraintlayout.widget.ConstraintLayout>