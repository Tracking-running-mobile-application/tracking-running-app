<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    android:layout_marginBottom="50dp"
    android:backgroundTint="@color/toolbar_color"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">

        <ImageView
            android:id="@+id/starIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="11dp"
            android:src="@drawable/ic_star_btn" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:text="Normal Run"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleText"
            android:layout_alignEnd="@+id/titleText"
            android:layout_alignBottom="@+id/dateText"
            android:layout_marginTop="-11dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="-8dp"
            android:maxLines="1"
            android:text="12KM"
            android:textColor="@color/main_yellow"
            android:textSize="34sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/starIcon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="9dp"
            android:text="22/10/2024"
            android:textColor="@color/white" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
